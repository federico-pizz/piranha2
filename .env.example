# Piranha ITA Environment Variables
# Copy this to .env and customize for your environment

# Database
DATABASE_URL=postgresql://piranha:yourpassword@db:5432/piranha

# Redis
REDIS_URL=redis://redis:6379/0

# Security (CHANGE IN PRODUCTION!)
SECRET_KEY=change-this-to-a-very-long-random-string-in-production
DEBUG=false

# ML Model
MODEL_PATH=/models
EMBEDDING_MODEL=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2

# Scraper
SCRAPE_INTERVAL=21600  # 6 hours (eBay ToS compliance)
SEED_DATABASE=true    # Set to true on first run

# eBay API (get from https://developer.ebay.com/)
EBAY_CLIENT_ID=your-ebay-app-id
EBAY_CLIENT_SECRET=your-ebay-cert-id
EBAY_ENVIRONMENT=sandbox  # sandbox or production
